<div class="row">
    <!-- GET -->
    <div class="col-md-3">
        <h1>GET</h1>
    </div>

    <!-- POST -->
    <div class="col-md-3">
        <h1>POST</h1>
    </div>

    <!-- PUT -->
    <div class="col-md-3">
        <h1>PUT</h1>
        <div class="card">
            <div class="card-body">
                <form action="/{{id}}?_method=PUT" method="POST">
                    <div class="form-group">
                        <label>Title</label>
                        <input class="form-control" type="text" name="title" value="{{ product.title }}">

                    </div>
                    <div class="form-group">
                        <label>Content</label>
                        <input class="form-control" type="text" name="content" value="{{ product.content }}">

                    </div>
                    <div class="form-group">
                        <label>Price</label>
                        <input class="form-control" type="text" name="price" value="{{ product.price }}">
                    </div>
                    <button type="submit" class="btn btn-primary">Submit</button>
                </form>
            </div>
        </div>
    </div>

    <!-- DELETE -->
    <div class="col-md-3">
        <h1>DELETE</h1>
    </div>
</div>
